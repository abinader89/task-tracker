<section class="phx-hero">
  <h1><%= gettext "Welcome to %{name}!", name: "Task Tracker 2" %></h1>
  <p>Task Tracker part two, this iteration has support for managers!</p>
</section>
<section class="row">
  <article class="column">
    <h2>Additional Actions</h2>
    <ul>
    <%= if !@current_user do %>
      <li>
        <a href="users/new">Registration</a>
      </li>
      <% end %>
      <%= if @current_user do %>
      <li>
      <a href="tasks">View My Tasks</a>
      </li>
      <%= if @current_user.admin do %>
      <li>
        <a href="users">Claim More Underlings</a>
      <li>
        <a href="tasks/new">Create Task</a>
      </li>
      <li>
      <a href="tasks">Assign Task</a>
      </li>
  </article>
</section>

<section class="row">
  <article class="column">
    <h2>Profile</h2>
      <div>
      <h5>My Manager</h5>
      <%= render "managers.html" %>
      <h5>My Underling(s)</h5>
      <%= render "underlings.html" %>
      </div>
      <% end %>
      <% end %>
    </ul>
