<h1>My Task(s)</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Desc</th>
        <th>Finished?</th>
      </tr>
    </thead>
    <tbody>
      <%= for task <- @tasks do %>
      <%= if task.user_id == @current_user.id do %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.desc %></td>
          <td><%= task.done %></td>
        </tr>
      <% end %>
      <% end %>
      </tbody>
  </table>
